<%- contentFor('title') %> ورود - <%- contentFor('header') %>
<style>
  @media (min-width: 768px) {
    .login-form {
      max-width: 400px;
    }
  }
</style>
<%- contentFor('body') %>
<div class="row justify-content-center">
  <div class="col-12 col-sm-8 col-md-6 col-lg-4 login-form">
    <h2 class="mt-5">ورود</h2>
    <form action="/auth/login" method="POST">
      <div class="form-group">
        <label for="phoneNumber">شماره تلفن همراه</label>
        <input
          type="number"
          minlength="11"
          maxlength="11"
          id="phoneNumber"
          name="phoneNumber"
          class="form-control"
          placeholder="شماره تلفن همراه خود را وارد کنید"
          required
        />
      </div>
      <div class="form-group">
        <label for="password">رمز ورود</label>
        <input
          type="password"
          id="password"
          name="password"
          class="form-control"
          placeholder="رمز ورود خود را وارد کنید"
          required
        />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">ورود</button>
      </div>
    </form>
  </div>
</div>
